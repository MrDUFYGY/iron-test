---
import Separador from './Separador.astro';
---

<div id="contenido-a-mostrar" style="display: none;">
  <slot name="contenido">
    <Separador
      texto="MENÚ DE ESTACIÓN"
      operadora="CR 88 SAPI DE CV"
      estacion="45"
      usuario={{
        nombre: "LUIS ALVARO VILLEGAS",
      }}
    />
  </slot>
</div>

<script is:inline>
  // Función para detectar si estamos en un iframe
  function isInIframe() {
    try {
      return window.self !== window.top;
    } catch (e) {
      return true;
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('contenido-a-mostrar');
    
    // Solo mostramos si NO estamos en un iframe
    if (!isInIframe()) {
      container.style.display = 'block';
    }
  });
</script>
