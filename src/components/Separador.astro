---
import "../styles/global.css";
import NavBarStandar from './NavBarStandar.astro';

interface Props {
    texto: string;
    color?: string;
    backgroundColor?: string;
    operadora?: string;
    estacion?: string | number;
    usuario?: {
        nombre: string;
    };
}

const { 
    texto, 
    color = "white",
    backgroundColor = "#1f2937",
    operadora = "CR 88 SAPI DE CV",
    estacion = "45",
    usuario = { nombre: "Usuario Demo" }
} = Astro.props;

// Obtener la fecha actual formateada
const fechaActual = new Date().toLocaleDateString('es-MX', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});
---

<div class="separador-container bg-gray-800 text-white p-3" style={`--text-color: ${color}; --bg-color: ${backgroundColor};`}>
    <div class="container mx-auto h-full">
        <div class="h-full flex items-center">
            <!-- Botón de navegación -->
            <NavBarStandar />
            
            <!-- Título -->
            <h1 class="text-lg font-bold text-nowrap ml-4">{texto}</h1>
            
            <!-- Separador -->
            <div class="h-6 w-px bg-gray-600 mx-2"></div>
            
            <!-- Información principal -->
            <div class="text-sm space-x-6 flex-1 flex items-center">
                <div class="flex items-center">
                    <span class="text-gray-400 mr-1">Operadora:</span>
                    <span class="font-medium">{operadora}</span>
                </div>
                
                <div class="h-4 w-px bg-gray-600"></div>
                
                <div class="flex items-center">
                    <span class="text-gray-400 mr-1">Estación:</span>
                    <span class="font-medium">HD-{estacion}</span>
                </div>
                
                <div class="h-4 w-px bg-gray-600"></div>
                
                <div class="flex items-center">
                    <span class="text-gray-400 mr-1">Fecha:</span>
                    <span class="font-medium">{fechaActual}</span>
                </div>
            </div>
            
            <!-- Información de sesión -->
            <div class="flex items-center space-x-4 border-r border-l border-gray-600 px-4 h-full">
                <div class="text-right">
                    <div class="text-xs text-gray-400">Sesión activa</div>
                    <div class="text-sm font-medium">{usuario.nombre}</div>
                </div>
                <div class="text-xs text-gray-400">
                    {new Date().toLocaleTimeString('es-MX', { hour: '2-digit', minute: '2-digit' })}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .separador-container {
        width: 100%;
        background-color: var(--bg-color);
        display: flex;
        justify-content: flex-start;
        align-items: center;
        margin-bottom: 0.1rem;
        height: 9dvh;
    }

    .separador {
        width: auto;
        display: flex;
        align-items: center;
        gap: 2rem;
        padding: 0;
    }

    .linea {
        flex-grow: 1;
        height: 2px;
        background: linear-gradient(
            90deg,
            transparent,
            var(--text-color) 50%,
            transparent
        );
        opacity: 0.3;
    }

    .texto {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--text-color);
        text-transform: uppercase;
        margin: 0;
        text-align: center;
        white-space: nowrap;
        letter-spacing: 0.1em;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }

    @media (max-width: 768px) {
        .separador-container {
            padding: 3rem 1rem;
        }

        .separador {
            gap: 1rem;
        }

        .texto {
            font-size: 1.8rem;
        }
    }

    @media (max-width: 480px) {
        .texto {
            font-size: 1.5rem;
        }

        .separador {
            gap: 0.75rem;
        }
    }
</style>
