<Layout>
    <Separador texto="MENÚ DE ESTACIÓN" />

    <div style="display: flex; justify-content: space-between; width: 100%; align-items: flex-start; height: 85vh;">
        <div style="width: 50%; height: 100%; margin-left: 2vw; border-right: 1px solid #ccc; overflow-y: auto; padding: 20px;    scrollbar-width: thin;
    scrollbar-color: #333 #e0e0e0;">
            <!-- Contenido para la Hoja de Información (Caratula) -->
            <div class=" mx-auto bg-white rounded-xl shadow-md p-6">
