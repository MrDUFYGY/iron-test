---
import Layout from "../layouts/Layout.astro";
import MenuEstacion from "../components/MenuEstacion.astro";
import Separador from "../components/Separador.astro";
---

<Layout>
    <Separador texto="MENÚ DE ESTACIÓN" />

    <div style="display: flex; justify-content: space-between; width: 100%; align-items: flex-start; height: 85vh;">
        <div style="width: 50%; height: 100%; margin-left: 2vw; border-right: 1px solid #ccc; overflow-y: auto; padding: 20px;    scrollbar-width: thin;
    scrollbar-color: #333 #e0e0e0;">
            <!-- Contenido para la Hoja de Información (Caratula) -->
            <div class=" mx-auto bg-white rounded-xl shadow-md p-6">
                <div class="border-b-2 border-gray-200 pb-4 mb-6">
                    <div class="flex justify-between items-start mb-4">
                        <h1 class="text-2xl font-bold uppercase">Pólizas</h1>
                        <span class="bg-blue-100 text-blue-800 font-bold px-3 py-1 rounded">HD-45</span>
                    </div>
                    <div class="flex justify-between items-center">
                        <div class="flex items-center">
                            <span class="font-semibold mr-2">Operadora:</span>
                            <span class="bg-gray-100 px-3 py-1 rounded font-medium">CR 88 SAPI DE CV</span>
                        </div>
                        <div class="text-right">
                            <span class="font-semibold">Fecha de la póliza:</span>
                            <span class="ml-2">jueves, 6 de marzo de 2025</span>
                        </div>
                    </div>
                </div>

                <form id="formulario" class="space-y-8">
                    <!-- Resumen de Procesos -->
                    <div class="bg-white p-4 rounded-xl border border-gray-200 mb-4 shadow-sm">
                        <div id="resumen-procesos-header" class="cursor-pointer flex justify-between items-center p-3 rounded-lg hover:bg-gray-50">
                            <h2 class="font-bold text-gray-800">Resumen de procesos</h2>
                            <span id="resumen-procesos-icon" class="text-gray-500">▼</span>
                        </div>
                        <div id="resumen-procesos-content" class="overflow-hidden transition-all duration-300 ease-in-out space-y-2 text-sm max-h-0">
                            <!-- Proceso 1: Resumen de liquidación -->
                            <div>
                                <div class="flex items-center p-2 bg-gray-100 rounded-t-lg">
                                    <p class="font-medium">1.- Verificar Resumen de liquidación (1/3)</p>
                                </div>
                                <div class="space-y-2 bg-white p-3 rounded-b-lg">
                                    <div class="flex items-center justify-between">
                                        <span class="text-gray-700">a) Litros vendidos por turno</span>
                                        <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-litros">Verificar</button>
                                    </div>
                                    <div class="flex items-center justify-between">
                                        <span class="text-gray-700">b) Formas de cobro</span>
                                        <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-formas-cobro">Verificar</button>
                                    </div>
                                    <div class="flex items-center justify-between">
                                        <span class="text-gray-700">c) Depósitos realizados</span>
                                        <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-depositos">Verificar</button>
                                    </div>
                                </div>
                            </div>

                            <!-- Proceso 2: Movimientos de Periféricos -->
                            <div>
                                <div class="flex items-center p-2 bg-gray-100 rounded-t-lg">
                                    <p class="font-medium">2.- Verificar Movimientos de Periféricos (1/3)</p>
                                </div>
                                <div class="space-y-2 bg-white p-3 rounded-b-lg">
                                    <div class="flex items-center justify-between">
                                        <span class="text-gray-700">a) Ventas de Periféricos</span>
                                        <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-perifericos">Verificar</button>
                                    </div>
                                    <div class="flex items-center justify-between">
                                        <span class="text-gray-700">b) Remisiones de periféricos</span>
                                        <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-remisiones-perifericos">Verificar</button>
                                    </div>
                                </div>
                            </div>

                            <!-- Proceso 3: Regularización de existencias -->
                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">3.- Verificar Reporte "Regularización de existencias"</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-regularizacion">Verificar</button>
                            </div>

                            <!-- Proceso 4: Ficha del Banco y Traslado de valores -->
                            <div>
                                <div class="flex items-center justify-between p-2 bg-gray-100 rounded-t-lg">
                                    <p class="font-medium">4.- Verificar Ficha del Banco y Traslado de valores</p>
                                    <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-traslado-valores">Verificar</button>
                                </div>
                                <div class="bg-white p-4 rounded-b-lg space-y-3">
                                    <div class="grid grid-cols-2 gap-4">
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700 mb-1">Importe F.traslado de valores:</label>
                                            <div class="relative">
                                                <span class="absolute left-3 top-2 text-gray-500">$</span>
                                                <input type="number" id="importeTraslado" class="pl-7 w-full border border-gray-300 rounded p-2 text-sm" placeholder="0.00" step="0.01">
                                            </div>
                                        </div>
                                        <div>
                                            <label class="block text-sm font-medium text-gray-700 mb-1">Importe Resumen de liquidación:</label>
                                            <div class="relative">
                                                <span class="absolute left-3 top-2 text-gray-500">$</span>
                                                <input type="number" id="importeResumen" class="pl-7 w-full border border-gray-300 rounded p-2 text-sm" placeholder="0.00" step="0.01">
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">Diferencia:</label>
                                        <div class="relative">
                                            <span class="absolute left-3 top-2 text-gray-500">$</span>
                                            <input type="text" id="diferencia" class="pl-7 w-full border border-gray-300 rounded p-2 text-sm bg-gray-50" readonly>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Proceso 5: Apuntes contables -->
                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">5.- Verificar Apuntes contables</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-apuntes-contables">Verificar</button>
                            </div>

                            <!-- Proceso 6: Hojas de corte de Periféricos -->
                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">6.- Verificar Hojas de corte de Periféricos (Turno 1,2 y 3)</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-hojas-corte-perifericos">Verificar</button>
                            </div>

                            <!-- Proceso 7: Comprobantes de gastos -->
                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">7.- Verificar Comprobantes de gastos (Nómina, etc)</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-gastos">Verificar</button>
                            </div>

                            <!-- Proceso 8: Libro de Tanques -->
                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">8.- Verificar Libro de Tanques (día 15 y último mes y cuando se realicen jarros)</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-libro-tanques">Verificar</button>
                            </div>

                            <!-- Proceso 9: Tira de venta real y listados -->
                            <div>
                                <div class="flex items-center p-2 bg-gray-100 rounded-t-lg">
                                    <p class="font-medium">9.- Verificar Tira de venta real, listado de contadores, y Listado de Mediciones</p>
                                </div>
                                <div class="space-y-2 bg-white p-3 rounded-b-lg">
                                    <div class="flex items-center justify-between">
                                        <span class="text-gray-700">a) Listado de contadores por turno</span>
                                        <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-listado-contadores">Verificar</button>
                                    </div>
                                    <div class="flex items-center justify-between">
                                        <span class="text-gray-700">b) Verificar litros jarros = litros retorno</span>
                                        <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-litros-jarros">Verificar</button>
                                    </div>
                                    <div class="flex items-center justify-between">
                                        <span class="text-gray-700">c) Tira de venta real</span>
                                        <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-tira-venta">Verificar</button>
                                    </div>
                                </div>
                            </div>

                            <!-- Proceso 10: Hoja de corte por cambio de turno -->
                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">10.- Verificar Hoja de corte por cambio de turno (solo si se trabaja fuera del sistema)</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-hoja-corte-cambio">Verificar</button>
                            </div>
                        </div>
                    </div>

                    <!-- Documentos que integran la póliza -->
                    <div class="bg-white p-4 rounded-xl border border-gray-200 mb-4 shadow-sm">
                        <div id="documentos-poliza-header" class="cursor-pointer flex justify-between items-center p-3 rounded-lg bg-gray-50">
                            <h2 class="font-bold text-gray-800">Documentos que integran la póliza</h2>
                            <span id="documentos-poliza-icon" class="text-gray-500">▲</span>
                        </div>
                        <div id="documentos-poliza-content" class="space-y-2 pt-2">
                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">1.- "Resumen" de Hoja de Liquidación</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-resumen-liquidacion">Subir</button>
                            </div>

                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">2.- Movimientos de caja (Ficha del Banco y Traslado de valores)</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-movimientos-caja">Subir</button>
                            </div>
                            
                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">3.- Nominas</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-nominas">Subir</button>
                            </div>
                            
                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">4.- Listado de contadores, HL de OpenPos y Mediciones con tickets</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-tira-venta">Subir</button>
                            </div>

                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">5.- Hojas de corte de Periféricos (Turno 1,2 y 3).</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-hojas-corte-perifericos">Subir</button>
                            </div>
                            
                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">6.- Recepción de carburantes con soportes (Historico y Documentacion)</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-recepcion-carburantes-soportes">Subir</button>
                            </div>

                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">7.- Listado de remisión de periféricos (Entrada de Perifericos.)</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-listado-remision-perifericos">Subir</button>
                            </div>
                            
                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">8.-Regularización de existencias (Mermas) </span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-regularizacion-mermas">Subir</button>
                            </div>

                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">9.- Jarreo</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-jarreo">Subir</button>
                            </div>


                        </div>
                    </div>
                    <!-- Metodos de pago -->
                    <div class="bg-white p-4 rounded-xl border border-gray-200 mb-4 shadow-sm">
                        <div id="metodos-pago-header" class="cursor-pointer flex justify-between items-center p-3 rounded-lg hover:bg-gray-50">
                            <h2 class="font-bold text-gray-800">Métodos de pago</h2>
                            <span id="metodos-pago-icon" class="text-gray-500">▼</span>
                        </div>
                        <div id="metodos-pago-content" class="space-y-2 pt-2 max-h-0 overflow-hidden transition-all duration-300 ease-in-out">
                            <div class="flex items-center justify-between p-2 bg-gray-50 rounded-lg">
                                <span class="text-gray-700">1.- Efectivo</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium">Verificar</button>
                            </div>
                            <div class="flex items-center justify-between p-2 bg-gray-50 rounded-lg">
                                <span class="text-gray-700">2.- Tarjeta de crédito/débito</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium">Verificar</button>
                            </div>
                            <div class="flex items-center justify-between p-2 bg-gray-50 rounded-lg">
                                <span class="text-gray-700">3.- Transferencia bancaria</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium">Verificar</button>
                            </div>
                            <div class="flex items-center justify-between p-2 bg-gray-50 rounded-lg">
                                <span class="text-gray-700">4.- Vales de despensa</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium">Verificar</button>
                            </div>
                         

                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">1.- Vales por Empresa</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-vales-empresa">Subir</button>
                            </div>

                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">2.- Corte de terminales con vouchers</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-corte-terminales">Subir</button>
                            </div>

                            <div class="flex items-center justify-between p-2 bg-gray-100 rounded-lg">
                                <span class="text-gray-700">3.- Lista de placas con tag</span>
                                <button class="bg-blue-600 text-white px-3 py-1 rounded-md hover:bg-blue-700 transition-colors text-sm font-medium" data-modal-target="modal-lista-placas">Subir</button>
                            </div>
                        </div>
                    </div>
                    <!-- Observaciones -->
                    <div class="bg-gray-50 p-4 rounded-xl border border-gray-200">
                        <label for="observaciones" class="block font-medium text-sm mb-2 text-gray-800">Observaciones:</label>
                        <textarea id="observaciones" class="w-full border border-gray-300 rounded p-2 text-sm" rows="4" placeholder="Escriba aquí..."></textarea>
                    </div>

                    <!-- Firma y turno -->
                    <div class="bg-gray-50 p-4 rounded-xl border border-gray-200 grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="turno" class="block font-medium mb-2 text-gray-800">Turno:</label>
                            <input id="turno" type="text" class="w-full border border-gray-300 rounded p-2">
                        </div>
                        <div>
                            <label class="block font-medium mb-2 text-gray-800">Nombre y firma del verificador:</label>
                            <input type="text" value="LUIS ALVARO VILLEGAS" disabled class="w-full bg-gray-200 border border-gray-300 rounded p-2">
                        </div>
                    </div>

                    <!-- Botones -->
                    <div class="text-center mt-6 space-x-4">
                        <button id="guardar" class="bg-gray-600 text-white px-8 py-3 rounded-lg hover:bg-gray-700 transition font-medium text-lg inline-block">
                            Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div id="modal-container" style="width: 50%; height: 100%; overflow-y: hidden; padding: 5px; background-color: #f0f0f0; ">
                <!-- Espacio para Modales -->
                <div class="bg-white px-5 py-2 rounded-lg border border-gray-200">
                    <h2 class="text-lg font-semibold">Menu de procesos.</h2>
                    <p class=" text-gray-600">Puedes ingresar al proceso deseado o seguir la hoja .</p>
