---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="container mx-auto p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Visor de Documentos de Turno</h1>

    <!-- Modal para visualizar PDF -->
    <div id="pdf-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50">
      <div class="bg-white rounded-lg p-6 max-w-6xl w-full h-[90vh] relative">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-semibold" id="modal-title">Visualización de Documento</h3>
          <button onclick="closeModal()" class="text-gray-500 hover:text-gray-700">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="h-[calc(90vh-8rem)]">
          <iframe id="pdf-viewer" class="w-full h-full border border-gray-300 rounded" title="Visor PDF"></iframe>
        </div>
      </div>
    </div>

    <!-- Modal de confirmación -->
    <div id="confirm-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50">
      <div class="bg-white rounded-lg p-6 max-w-md w-full">
        <div class="flex justify-between items-center mb-4">
          <h3 class="text-lg font-semibold">Confirmar Documento</h3>
          <button onclick="closeConfirmModal()" class="text-gray-500 hover:text-gray-700">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <p class="mb-6">¿Deseas confirmar este documento?</p>
        <div class="flex justify-end gap-4">
          <button onclick="closeConfirmModal()" class="px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300 transition-colors">
            Cancelar
          </button>
          <button onclick="confirmarDocumentoSeleccionado()" class="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition-colors">
            Confirmar
          </button>
        </div>
      </div>
    </div>

    <!-- Modal de validación de montos -->
    <div id="validation-dialog" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50">
      <div class="bg-white rounded-lg p-6 max-w-6xl w-full relative z-50">
        <h3 class="text-lg font-semibold mb-4">Validación de Archivos de Listado de Contadores</h3>
        <div class="grid grid-cols-3 gap-4 mb-6">
          <div class="border rounded overflow-hidden h-96">
            <iframe id="preview-pdf1" class="w-full h-full" title="Vista previa PDF 1"></iframe>
          </div>
          <div class="border rounded overflow-hidden h-96">
            <iframe id="preview-pdf2" class="w-full h-full" title="Vista previa PDF 2"></iframe>
          </div>
          <div class="border rounded overflow-hidden h-96">
            <iframe id="preview-pdf3" class="w-full h-full" title="Vista previa PDF 3"></iframe>
          </div>
        </div>
        <div class="flex justify-end space-x-4">
          <button id="cancel-validation" class="px-6 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300">Cancelar</button>
          <button id="confirm-validation" class="px-6 py-2 bg-green-600 text-white rounded hover:bg-green-700">Confirmar</button>
        </div>
      </div>
    </div>

    <!-- Resumen de archivos -->
    <div class="bg-white rounded-lg shadow-lg p-6">
      <h2 class="text-xl font-semibold mb-6 text-gray-700">Resumen de Archivos</h2>
      
      <!-- Listado de Contadores -->
      <div class="mb-8">
        <div class="flex items-center mb-1">
          <h3 class="font-medium text-gray-700 text-lg">Listado de Contadores.</h3>
          <div class="flex-1 border-b border-black mx-4"></div>
          <button id="validate-files-btn" class="px-3 py-1 bg-blue-600 text-white rounded text-sm hover:bg-blue-700 transition-colors">Validar</button>
        </div>
        <div class="flex gap-x-10 px-8">
          <div class="border-4 border-gray-300 rounded-xl p-4 w-96 flex flex-col bg-white shadow-sm cursor-pointer transition-shadow transition-colors hover:shadow-2xl hover:bg-yellow-50" onclick="openPdfViewer('contador-turno1')">
            <div class="flex justify-between items-start mb-2">
              <span class="font-bold text-base text-gray-800">Turno 1</span>
              <span class="font-semibold text-base text-yellow-600">En espera</span>
            </div>
            <div class="text-base text-gray-500">Archivo subido</div>
          </div>
          <div class="border-4 border-gray-300 rounded-xl p-4 w-96 flex flex-col bg-white shadow-sm cursor-pointer transition-shadow transition-colors hover:shadow-2xl hover:bg-yellow-50" onclick="openPdfViewer('contador-turno2')">
            <div class="flex justify-between items-start mb-2">
              <span class="font-bold text-base text-gray-800">Turno 2</span>
              <span class="font-semibold text-base text-yellow-600">En espera</span>
            </div>
            <div class="text-base text-gray-500">Archivo subido</div>
          </div>
          <div class="border-4 border-gray-300 rounded-xl p-4 w-96 flex flex-col bg-white shadow-sm cursor-pointer transition-shadow transition-colors hover:shadow-2xl hover:bg-yellow-50" onclick="openPdfViewer('contador-turno3')">
            <div class="flex justify-between items-start mb-2">
              <span class="font-bold text-base text-gray-800">Turno 3</span>
              <span class="font-semibold text-base text-yellow-600">En espera</span>
            </div>
            <div class="text-base text-gray-500">Archivo subido</div>
          </div>
        </div>
      </div>

      <!-- Hojas de Open Pos -->
      <div class="mb-8">
        <div class="flex items-center mb-1">
          <h3 class="font-medium text-gray-700 text-lg">Hojas de Open Pos</h3>
          <div class="flex-1 border-b border-black mx-4"></div>
          <button class="px-3 py-1 bg-blue-600 text-white rounded text-sm hover:bg-blue-700 transition-colors">Validar</button>
        </div>
        <div class="flex gap-x-10 px-8">
          <div class="border-4 border-gray-300 rounded-xl p-4 w-96 flex flex-col bg-white shadow-sm cursor-pointer transition-shadow transition-colors hover:shadow-2xl hover:bg-gray-100" onclick="openPdfViewer('openpos-turno1')">
            <div class="flex justify-between items-start mb-2">
              <span class="font-bold text-base text-gray-800">Turno 1</span>
              <span class="font-semibold text-base text-gray-500">Faltante</span>
            </div>
            <div class="text-base text-gray-500">Archivo no subido</div>
          </div>
          <div class="border-4 border-gray-300 rounded-xl p-4 w-96 flex flex-col bg-white shadow-sm cursor-pointer transition-shadow transition-colors hover:shadow-2xl hover:bg-gray-100" onclick="openPdfViewer('openpos-turno2')">
            <div class="flex justify-between items-start mb-2">
              <span class="font-bold text-base text-gray-800">Turno 2</span>
              <span class="font-semibold text-base text-gray-500">Faltante</span>
            </div>
            <div class="text-base text-gray-500">Archivo no subido</div>
          </div>
          <div class="border-4 border-gray-300 rounded-xl p-4 w-96 flex flex-col bg-white shadow-sm cursor-pointer transition-shadow transition-colors hover:shadow-2xl hover:bg-gray-100" onclick="openPdfViewer('openpos-turno3')">
            <div class="flex justify-between items-start mb-2">
              <span class="font-bold text-base text-gray-800">Turno 3</span>
              <span class="font-semibold text-base text-gray-500">Faltante</span>
            </div>
            <div class="text-base text-gray-500">Archivo no subido</div>
          </div>
        </div>
      </div>

      <!-- Hoja de Mediciones con Comprobante -->
      <div class="mb-8">
        <div class="flex items-center mb-1">
          <h3 class="font-medium text-gray-700 text-lg">Hoja de Mediciones con Comprobante</h3>
          <div class="flex-1 border-b border-black mx-4"></div>
          <button class="px-3 py-1 bg-blue-600 text-white rounded text-sm hover:bg-blue-700 transition-colors">Validar</button>
        </div>
        <div class="flex gap-x-10 px-8">
          <div class="border-4 border-gray-300 rounded-xl p-4 w-96 flex flex-col bg-white shadow-sm cursor-pointer transition-shadow transition-colors hover:shadow-2xl hover:bg-green-50" onclick="openPdfViewer('comprobante-turno1')">
            <div class="flex justify-between items-start mb-2">
              <span class="font-bold text-base text-gray-800">Turno 1</span>
              <span class="font-semibold text-base text-green-600">Confirmado</span>
            </div>
            <div class="text-base text-gray-500">Archivo subido</div>
          </div>
          <div class="border-4 border-gray-300 rounded-xl p-4 w-96 flex flex-col bg-white shadow-sm cursor-pointer transition-shadow transition-colors hover:shadow-2xl hover:bg-green-50" onclick="openPdfViewer('comprobante-turno2')">
            <div class="flex justify-between items-start mb-2">
              <span class="font-bold text-base text-gray-800">Turno 2</span>
              <span class="font-semibold text-base text-green-600">Confirmado</span>
            </div>
            <div class="text-base text-gray-500">Archivo subido</div>
          </div>
          <div class="border-4 border-gray-300 rounded-xl p-4 w-96 flex flex-col bg-white shadow-sm cursor-pointer transition-shadow transition-colors hover:shadow-2xl hover:bg-green-50" onclick="openPdfViewer('comprobante-turno3')">
            <div class="flex justify-between items-start mb-2">
              <span class="font-bold text-base text-gray-800">Turno 3</span>
              <span class="font-semibold text-base text-green-600">Confirmado</span>
            </div>
            <div class="text-base text-gray-500">Archivo subido</div>
          </div>
        </div>
      </div>

      

    </div>
  </div>

  <script>
    // Declarar las funciones en el ámbito global
    window.handleAreaClick = function(id: string) {
      const status = document.getElementById(`${id}-status`);
      if (status && status.textContent === 'Archivo no subido') {
        alert('No hay archivo disponible para visualizar');
        return;
      }

      // Abrir el modal de confirmación
      window.documentoSeleccionado = id;
      const confirmModal = document.getElementById('confirm-modal');
      if (confirmModal) {
        confirmModal.classList.remove('hidden');
        confirmModal.style.display = 'flex';
      }
    };

    window.closeConfirmModal = function() {
      const confirmModal = document.getElementById('confirm-modal');
      if (confirmModal) {
        confirmModal.classList.add('hidden');
        confirmModal.style.display = 'none';
      }
      window.documentoSeleccionado = null;
    };

    window.confirmarDocumentoSeleccionado = function() {
      if (window.documentoSeleccionado) {
        const container = document.getElementById(window.documentoSeleccionado)?.closest('.border-4');
        const statusText = container?.querySelector('.text-yellow-600');
        
        if (container && statusText) {
          container.classList.remove('border-yellow-400');
          container.classList.add('border-green-500');
          statusText.textContent = 'Confirmado';
          statusText.classList.remove('text-yellow-600');
          statusText.classList.add('text-green-600');
        }
      }
      window.closeConfirmModal();
    };

    window.openPdfViewer = function(id: string) {
      const modal = document.getElementById('pdf-modal');
      const viewer = document.getElementById('pdf-viewer') as HTMLIFrameElement;
      const title = document.getElementById('modal-title');
      const status = document.getElementById(`${id}-status`);

      if (!modal || !viewer || !title) {
        console.error('No se encontraron los elementos necesarios para el modal');
        return;
      }

      // Si es un documento combinado
      if (id.includes('combinado')) {
        const section = id.split('-')[0];
        const turnos = ['turno1', 'turno2', 'turno3'];
        const allUploaded = turnos.every(turno => {
          const status = document.getElementById(`${section}-${turno}-status`);
          return status && status.textContent !== 'Archivo no subido';
        });

        if (!allUploaded) {
          alert('Todos los turnos deben tener archivos subidos para ver la versión combinada');
          return;
        }

        // Aquí iría la lógica para combinar los PDFs
        viewer.src = '/assets/simulacion.pdf';
        title.textContent = `Visualización Combinada: ${section.toUpperCase()}`;
        modal.classList.remove('hidden');
        modal.style.display = 'flex';
        return;
      }

      // Para documentos individuales
      if (status && status.textContent === 'Archivo no subido') {
        alert('No hay archivo disponible para visualizar');
        return;
      }

      // Establecer la URL del PDF y el título
      viewer.src = '/assets/simulacion.pdf';
      title.textContent = `Visualización: ${id.replace('-', ' ').toUpperCase()}`;
      
      // Mostrar el modal
      modal.classList.remove('hidden');
      modal.style.display = 'flex';
    };

    window.closeModal = function() {
      const modal = document.getElementById('pdf-modal');
      const viewer = document.getElementById('pdf-viewer') as HTMLIFrameElement;
      
      if (!modal || !viewer) return;
      
      modal.classList.add('hidden');
      modal.style.display = 'none';
      viewer.src = '';
    };

    // Función para mostrar el diálogo de validación
    window.showValidationDialog = function() {
      const validationDialog = document.getElementById('validation-dialog');
      if (validationDialog) {
        // Cargar el PDF de simulación en los tres visores
        const pdfPreviews = ['preview-pdf1', 'preview-pdf2', 'preview-pdf3'];
        pdfPreviews.forEach(id => {
          const iframe = document.getElementById(id);
          if (iframe) {
            iframe.src = '/assets/simulacion.pdf';
          }
        });
        
        validationDialog.classList.remove('hidden');
        validationDialog.style.display = 'flex';
      }
    };

    // Función para cerrar el diálogo de validación
    window.closeValidationDialog = function() {
      const validationDialog = document.getElementById('validation-dialog');
      if (validationDialog) {
        validationDialog.classList.add('hidden');
        validationDialog.style.display = 'none';
        
        // Limpiar las URLs de los PDFs
        const pdfPreviews = ['preview-pdf1', 'preview-pdf2', 'preview-pdf3'];
        pdfPreviews.forEach(id => {
          const iframe = document.getElementById(id);
          if (iframe) {
            iframe.src = '';
          }
        });
      }
    };

    // Event listeners para el diálogo de validación
    document.addEventListener('DOMContentLoaded', function() {
      const validateFilesBtn = document.getElementById('validate-files-btn');
      const cancelValidationBtn = document.getElementById('cancel-validation');
      const confirmValidationBtn = document.getElementById('confirm-validation');

      if (validateFilesBtn) {
        validateFilesBtn.addEventListener('click', window.showValidationDialog);
      }

      if (cancelValidationBtn) {
        cancelValidationBtn.addEventListener('click', window.closeValidationDialog);
      }

      if (confirmValidationBtn) {
        confirmValidationBtn.addEventListener('click', function() {
          // Aquí iría la lógica para confirmar la validación
          window.closeValidationDialog();
          // Actualizar el estado de los contenedores a confirmados
          const containers = document.querySelectorAll('.border-4');
          containers.forEach(container => {
            const statusText = container.querySelector('.text-yellow-600');
            if (statusText) {
              statusText.textContent = 'Confirmado';
              statusText.classList.remove('text-yellow-600');
              statusText.classList.add('text-green-600');
              container.classList.remove('hover:bg-yellow-50');
              container.classList.add('hover:bg-green-50');
            }
          });
        });
      }
    });

    // Inicializar variables globales
    window.documentoSeleccionado = null;

    // Cerrar modal con la tecla ESC
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        window.closeModal();
        window.closeConfirmModal();
      }
    });

    // Cerrar modal al hacer clic fuera del contenido
    const modal = document.getElementById('pdf-modal');
    const confirmModal = document.getElementById('confirm-modal');
    
    if (modal) {
      modal.addEventListener('click', function(e) {
        if (e.target === this) {
          window.closeModal();
        }
      });
    }

    if (confirmModal) {
      confirmModal.addEventListener('click', function(e) {
        if (e.target === this) {
          window.closeConfirmModal();
        }
      });
    }
  </script>
</Layout> 