---
import Layout from '../layouts/Layout.astro';
import CustomPdfInput from '../components/customInput/CustomPdfInput.svelte';
import Separador from '../components/Separador.astro';
import ContenidoAMostrar from '../components/ContenidoAMostrar.astro';
---

<Layout title="Prueba de Carga de PDF">

  <ContenidoAMostrar>
    <Separador
    texto="MENÚ DE ESTACIÓN"
    operadora="CR 88 SAPI DE CV"
    estacion="45"
    usuario={{
      nombre: "LUIS ALVARO VILLEGAS",
    }}
  />
  </ContenidoAMostrar>
  <h2>Vista Test API - Prueba de Consumo API</h2>
  <button onclick="scanFingerprint()">Escanear Huella (API)</button>
  <pre id="result"></pre>
  <script is:inline type="text/javascript">
  function scanFingerprint() {
      fetch('https://localhost:44384/api/fingerprint/scan', { method: 'POST' })
          .then(r => r.json())
          .then(data => document.getElementById('result').textContent = JSON.stringify(data, null, 2));
  }
  </script>

  

</Layout>
